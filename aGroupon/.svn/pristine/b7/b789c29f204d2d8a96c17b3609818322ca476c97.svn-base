@model aGrouponClasses.Models.tContent
<fieldset>
    <p id="DescriptionDiv">
    </p>
</fieldset>
<p>
    @Html.LabelFor(model => model.Code)
    <span class="field">
        @Html.TextBoxFor(model => model.Code, new { @class = "longinput required" })
    </span>
    @Html.ValidationMessageFor(model => model.Code)
</p>
<p>
    @Html.LabelFor(model => model.Name)
    <span class="field">
        @Html.TextBoxFor(model => model.Name, new { @class = "longinput required" })
    </span>
    @Html.ValidationMessageFor(model => model.Name)
</p>
<p>
    @Html.LabelFor(model => model.Description)
    <span class="field">
        @Html.TextAreaFor(model => model.Description, new { @class = "longinput required" })
    </span>
    @Html.ValidationMessageFor(model => model.Description)
</p>
